<!--
Doel: Applicatieniveau resources en theming voor de WPF desktopapp.
Beschrijving: Bundelt en laadt resource dictionaries (thema’s/stijlen) die door alle vensters worden gebruikt.
-->
<Application x:Class="Biblio_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Laad palet (Light) eerst, daarna stijlen die DynamicResource gebruiken -->
                <ResourceDictionary Source="/Styles/Theme.Light.xaml"/>
                <ResourceDictionary Source="/Styles/Themes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converter beschikbaar voor alle windows -->
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
