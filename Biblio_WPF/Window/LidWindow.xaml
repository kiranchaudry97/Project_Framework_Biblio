<Page x:Class="Biblio_WPF.Window.LidWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Biblio_WPF.Window"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="LidWindow">

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <Button Content="Terug" Click="OnBack" Margin="0,0,8,0"/>
                <TextBox x:Name="MemberSearchBox" Width="360" Margin="0,0,8,0" />
                <Button Content="Zoek" Click="OnSearch" Background="#0078D7" Foreground="White" Padding="8,4" Margin="0,0,8,0"/>
                <Button Content="Nieuw" Click="OnNewMember" Margin="0,0,8,0"/>
            </StackPanel>

            <TextBlock x:Name="MembersCountLabel" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>
        </DockPanel>

        <DataGrid x:Name="MembersGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single" SelectionChanged="MembersGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Voornaam" Binding="{Binding Voornaam}" Width="200"/>
                <DataGridTextColumn Header="Achternaam" Binding="{Binding AchterNaam}" Width="200"/>
                <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Telefoon" Binding="{Binding Telefoon}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Width="220" Margin="0,0,12,0">
                    <TextBlock Text="Voornaam"/>
                    <TextBox x:Name="VoornaamBox" Margin="0,4,0,8"/>
                </StackPanel>

                <StackPanel Width="220" Margin="0,0,12,0">
                    <TextBlock Text="Achternaam"/>
                    <TextBox x:Name="AchternaamBox" Margin="0,4,0,8"/>
                </StackPanel>

                <StackPanel Width="260" Margin="0,0,12,0">
                    <TextBlock Text="E-mail"/>
                    <TextBox x:Name="EmailBox" Margin="0,4,0,8"/>
                </StackPanel>

                <StackPanel Width="160" Margin="0,0,12,0">
                    <TextBlock Text="Telefoon"/>
                    <TextBox x:Name="TelefoonBox" Margin="0,4,0,8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Opslaan" Click="OnSaveMember" Background="#0078D7" Foreground="White" Padding="8,4" Margin="0,0,8,0"/>
                    <Button Content="Verwijderen" Click="OnDeleteMember" Background="#D32F2F" Foreground="White" Padding="8,4"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
