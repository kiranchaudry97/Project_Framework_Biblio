    <Page x:Class="Biblio_WPF.Window.ResetWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Biblio_WPF.Window"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="500"
      Title="ResetWindow">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Border Width="440" Padding="16" CornerRadius="6" Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Wachtwoord
vergeten" FontSize="16" FontWeight="Bold" Margin="0,0,0,8" Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBlock Text="Voer uw e-mail in om een resetlink (of code) te ontvangen." Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBox x:Name="ResetEmailBox" Margin="0,8,0,8" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Annuleren" Click="OnCancel" Margin="0,0,8,0"/>
                    <Button Content="Verstuur" Click="OnSendReset" Style="{StaticResource PrimaryButton}"/>
                </StackPanel>

                <TextBlock x:Name="ResultText" Text="" Margin="0,8,0,0" Foreground="{DynamicResource ForegroundBrush}"/>

                <!-- Dev: one-click reset panel, hidden until token is generated -->
                <StackPanel x:Name="ResetActionPanel" Visibility="Collapsed" Margin="0,8,0,0">
                    <TextBlock Text="Reset token (dev):" Foreground="{DynamicResource ForegroundBrush}"/>
                    <TextBox x:Name="TokenBox" IsReadOnly="True" Margin="0,4,0,8" />
                    <TextBlock Text="Nieuw wachtwoord:" Foreground="{DynamicResource ForegroundBrush}"/>
                    <PasswordBox x:Name="NewPwdBox" Margin="0,4,0,8" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Annuleren" Click="OnCancel" Margin="0,0,8,0"/>
                        <Button Content="Herstel wachtwoord" Click="OnApplyReset" Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                    <TextBlock x:Name="ResetStatusText" Text="" Margin="0,8,0,0" Foreground="{DynamicResource ForegroundBrush}"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
