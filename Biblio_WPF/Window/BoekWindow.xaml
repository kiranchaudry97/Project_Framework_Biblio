    <Page x:Class="Biblio_WPF.Window.BoekWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Biblio_WPF.Window"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="BoekWindow">

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar: search, category filter, buttons, count -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <Button Content="Terug" Click="OnBack" Margin="0,0,8,0"/>
                <TextBox x:Name="SearchBox" Width="320" Margin="0,0,8,0" />
                <ComboBox x:Name="CategoryFilter" Width="220" Margin="0,0,8,0"/>
                <Button Content="Zoek" Click="OnSearch" Background="#0078D7" Foreground="White" Padding="8,4" Margin="0,0,8,0"/>
                <Button Content="Nieuw" Click="OnNewBook" Margin="0,0,8,0"/>
            </StackPanel>

            <TextBlock x:Name="CountLabel" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>
        </DockPanel>

        <!-- Books grid -->
        <DataGrid x:Name="BooksGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" CanUserAddRows="False" SelectionMode="Single" SelectionChanged="BooksGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Titel}" Width="*"/>
                <DataGridTextColumn Header="Auteur" Binding="{Binding Auteur}" Width="250"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" Width="180"/>
                <DataGridTextColumn Header="Categorie" Binding="{Binding categorie.Naam}" Width="180"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Editor panel -->
        <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,8,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Width="600">
                        <TextBlock Text="Titel"/>
                        <TextBox x:Name="TitelBox" Margin="0,4,0,8"/>

                        <TextBlock Text="Auteur"/>
                        <TextBox x:Name="AuteurBox" Margin="0,4,0,8"/>

                        <TextBlock Text="ISBN"/>
                        <TextBox x:Name="IsbnBox" Margin="0,4,0,8"/>
                    </StackPanel>

                    <StackPanel Width="320" Margin="24,0,0,0">
                        <TextBlock Text="Categorie"/>
                        <ComboBox x:Name="CategoryBox" Margin="0,4,0,8"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                            <Button Content="Opslaan" Click="OnSaveBook" Background="#0078D7" Foreground="White" Padding="8,4" Margin="0,0,8,0"/>
                            <Button Content="Verwijderen" Click="OnDeleteBook" Background="#D32F2F" Foreground="White" Padding="8,4"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
