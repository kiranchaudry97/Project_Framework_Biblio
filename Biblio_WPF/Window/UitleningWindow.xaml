    <Page x:Class="Biblio_WPF.Window.UitleningWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Biblio_WPF.Window"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UitleningWindow">

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <Button Content="Terug" Click="OnBack" Margin="0,0,8,0"/>

                <TextBlock Text="Lid:" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <ComboBox x:Name="LidFilter" Width="200" SelectionChanged="OnFilterChanged"/>

                <TextBlock Text="Boek:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                <ComboBox x:Name="BoekFilter" Width="200" SelectionChanged="OnFilterChanged"/>

                <CheckBox x:Name="OnlyOpenCheck" Content="Alleen open" Margin="12,0,8,0" VerticalAlignment="Center" Checked="OnFilterChanged" Unchecked="OnFilterChanged"/>

                <!-- Date range filters -->
                <TextBlock Text="Van:" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <DatePicker x:Name="FromDatePicker" Width="120" SelectedDateChanged="OnFilterChanged"/>
                <TextBlock Text="Tot:" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <DatePicker x:Name="ToDatePicker" Width="120" SelectedDateChanged="OnFilterChanged"/>

                <Button Content="Uitlenen" Click="OnNewLoan" Background="#0078D7" Foreground="White" Margin="8,0,0,0" Padding="8,4"/>
            </StackPanel>

            <!-- Right side shows count and a small filter/info message -->
            <StackPanel DockPanel.Dock="Right" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                <TextBlock x:Name="CountLabel" HorizontalAlignment="Right" />
                <TextBlock x:Name="FilterInfoLabel" HorizontalAlignment="Right" FontSize="12" Foreground="Gray" />
            </StackPanel>
        </DockPanel>

        <DataGrid x:Name="LoansGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lid" Binding="{Binding Lid.Voornaam}" Width="*"/>
                <DataGridTextColumn Header="Boek" Binding="{Binding Boek.Titel}" Width="200"/>
                <DataGridTextColumn Header="Start" Binding="{Binding StartDate, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Eind" Binding="{Binding DueDate, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Ingeleverd" Binding="{Binding ReturnedAt, StringFormat=d}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Markeer als teruggebracht" Click="OnReturnLoan" Margin="0,0,12,0"/>
            <Button Content="Verwijderen" Click="OnDeleteLoan" Background="#D32F2F" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
