    <Page x:Class="Biblio_WPF.Window.LoginWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Biblio_WPF.Window"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginWindow">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Border Width="420" Padding="20" CornerRadius="6" Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Inloggen" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>

                <TextBlock Text="E-mail" Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBox x:Name="EmailBox" Margin="0,4,0,8"/>

                <TextBlock Text="Wachtwoord" Foreground="{DynamicResource ForegroundBrush}"/>
                <PasswordBox x:Name="PwdBox" Margin="0,4,0,4"/>
                <TextBox x:Name="PwdTextBox" Margin="0,4,0,4" Visibility="Collapsed" />

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <CheckBox x:Name="ShowPwdCheck" Content="Toon wachtwoord" Checked="OnShowPasswordChecked" Unchecked="OnShowPasswordUnchecked"/>

                    <!-- Replace button with hyperlink-style text -->
                    <TextBlock Margin="12,0,0,0" VerticalAlignment="Center">
                        <Hyperlink Click="OnForgotPassword" Foreground="{DynamicResource AccentBrush}">Wachtwoord vergeten</Hyperlink>
                    </TextBlock>

                    <!-- Registratie link voor aanmaken nieuwe gebruiker -->
                    <TextBlock Margin="12,0,0,0" VerticalAlignment="Center">
                        <Hyperlink Click="OnRegister" Foreground="{DynamicResource AccentBrush}">Registreer</Hyperlink>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Annuleren" Click="OnCancel" Margin="0,0,8,0"/>
                    <Button Content="Inloggen" Click="OnLogin" Style="{StaticResource PrimaryButton}"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
