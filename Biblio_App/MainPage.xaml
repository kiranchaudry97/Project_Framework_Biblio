<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Biblio_App.ViewModels"
             xmlns:models="clr-namespace:Biblio_Models.Entiteiten;assembly=Biblio_Models"
             x:Class="Biblio_App.MainPage"
             x:DataType="viewmodel:MainViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,12"
            Spacing="12">

            <Label
                Text="Dashboard"
                FontSize="20"
                FontAttributes="Bold" />

            <HorizontalStackLayout Spacing="24">
                <VerticalStackLayout>
                    <Label Text="Totaal boeken" FontAttributes="Bold" />
                    <Label Text="{Binding TotaalBoeken}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Totaal leden" FontAttributes="Bold" />
                    <Label Text="{Binding TotaalLeden}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Open uitleningen" FontAttributes="Bold" />
                    <Label Text="{Binding OpenUitleningen}" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Label Text="Synchronisatie" FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="8">
                <Label Text="{Binding SynchronisatieStatus}" VerticalOptions="Center" />
                <Button Text="Vernieuwen" Command="{Binding VernieuwenAsyncCommand}" />
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding Boeken}" SelectionMode="Single" SelectedItem="{Binding SelectedBoek}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Boek">
                        <Frame Padding="8" Margin="4">
                            <VerticalStackLayout>
                                <Label Text="{Binding Titel}" FontAttributes="Bold" />
                                <Label Text="{Binding Auteur}" FontSize="12" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <HorizontalStackLayout Spacing="8">
                <Button Text="Voeg toe" Command="{Binding VoegToeCommand}" />
                <Button Text="Boeken" Command="{Binding NavigateToBoekenCommand}" />
                <Button Text="Leden" Command="{Binding NavigateToLedenCommand}" />
                <Button Text="Uitleningen" Command="{Binding NavigateToUitleningenCommand}" />
                <Button Text="Categorieën" Command="{Binding NavigateToCategorieenCommand}" />
            </HorizontalStackLayout>

            <Label Text="Geselecteerd boek:" FontAttributes="Bold" />
            <Label Text="{Binding SelectedBoek.DisplayName}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
