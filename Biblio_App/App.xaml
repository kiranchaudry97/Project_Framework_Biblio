<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Biblio_App"
             xmlns:conv="clr-namespace:Biblio_App.Converters"
             x:Class="Biblio_App.App">
    <Application.Resources>
        <ResourceDictionary>
            <conv:StringNotEmptyToBoolConverter x:Key="StringNotEmptyToBoolConverter" />
            <conv:DateToBoolConverter x:Key="DateToBoolConverter" />
            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
