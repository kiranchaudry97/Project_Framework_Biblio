<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Biblio_App.ViewModels"
             xmlns:models="clr-namespace:Biblio_Models.Entiteiten;assembly=Biblio_Models"
             x:Class="Biblio_App.Pages.UitleningenPagina"
             x:DataType="viewmodel:UitleningenViewModel"
             Title="Uitleningen">

    <Grid RowDefinitions="Auto,*,Auto,Auto" ColumnDefinitions="*,*" Padding="12">
        <Label Grid.ColumnSpan="2" Text="Uitleningen" FontSize="20" FontAttributes="Bold" />

        <CollectionView Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Uitleningen}" SelectionMode="Single" SelectedItem="{Binding SelectedUitlening, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Lenen">
                    <Frame Padding="8" Margin="4">
                        <VerticalStackLayout>
                            <Label Text="{Binding Boek.Titel}" FontAttributes="Bold" />
                            <Label Text="{Binding Lid.Email}" FontSize="12" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="8">
            <Frame HasShadow="False" Padding="2" BorderColor="Transparent" CornerRadius="6">
                <Picker x:Name="BoekPicker" ItemsSource="{Binding BoekenList}" ItemDisplayBinding="{Binding DisplayName}" SelectedItem="{Binding SelectedBoek, Mode=TwoWay}" />
            </Frame>
            <Label TextColor="Red" Text="{Binding BoekError}" IsVisible="{Binding BoekError, Converter={StaticResource StringNotEmptyToBoolConverter}}" />

            <Frame HasShadow="False" Padding="2" BorderColor="Transparent" CornerRadius="6">
                <Picker x:Name="LidPicker" ItemsSource="{Binding LedenList}" ItemDisplayBinding="{Binding Voornaam}" SelectedItem="{Binding SelectedLid, Mode=TwoWay}" />
            </Frame>
            <Label TextColor="Red" Text="{Binding LidError}" IsVisible="{Binding LidError, Converter={StaticResource StringNotEmptyToBoolConverter}}" />

            <Frame HasShadow="False" Padding="2" BorderColor="Transparent" CornerRadius="6">
                <DatePicker x:Name="StartDatePicker" Date="{Binding StartDate, Mode=TwoWay}" />
            </Frame>
            <Label TextColor="Red" Text="{Binding StartDateError}" IsVisible="{Binding StartDateError, Converter={StaticResource StringNotEmptyToBoolConverter}}" />

            <Frame HasShadow="False" Padding="2" BorderColor="Transparent" CornerRadius="6">
                <DatePicker x:Name="DueDatePicker" Date="{Binding DueDate, Mode=TwoWay}" />
            </Frame>
            <Label TextColor="Red" Text="{Binding DueDateError}" IsVisible="{Binding DueDateError, Converter={StaticResource StringNotEmptyToBoolConverter}}" />

            <Switch IsToggled="{Binding ReturnedAt, Converter={StaticResource DateToBoolConverter}, Mode=TwoWay}" />
        </VerticalStackLayout>

        <Label Grid.Row="2" Grid.ColumnSpan="2" TextColor="Red" IsVisible="{Binding HasValidationErrors}" Text="{Binding ValidationMessage}" />

        <HorizontalStackLayout Grid.Row="3" Grid.ColumnSpan="2" Spacing="12" HorizontalOptions="Center">
            <Button Text="Nieuw" Command="{Binding NieuwCommand}" />
            <Button Text="Opslaan" Command="{Binding OpslaanCommand}" />
            <Button Text="Verwijder" Command="{Binding VerwijderCommand}" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>