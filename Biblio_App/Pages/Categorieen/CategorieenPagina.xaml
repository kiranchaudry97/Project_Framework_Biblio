<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Biblio_App.ViewModels"
             xmlns:models="clr-namespace:Biblio_Models.Entiteiten;assembly=Biblio_Models"
             x:Class="Biblio_App.Pages.CategorieenPagina"
             x:DataType="viewmodel:CategorieenViewModel"
             Title="{Binding PageHeaderText, Source={x:Reference Page}}"
             x:Name="Page">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="0,0,8,0" VerticalOptions="Center">
            <Label x:Name="TitleLabel" 
                   Text="{Binding PageHeaderText, Source={x:Reference Page}}" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center" 
                   TextColor="{StaticResource White}" 
                   Grid.Column="0" />
            <Label x:Name="PageLanguageLabel"
                   Grid.Column="1"
                   WidthRequest="48"
                   Margin="0,0,12,0"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   TextColor="{StaticResource White}"
                   BackgroundColor="Transparent"
                   HorizontalTextAlignment="End" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <Grid Padding="20" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />   <!-- Page Header -->
                <RowDefinition Height="Auto" />   <!-- Form Section -->
                <RowDefinition Height="*" />      <!-- List Section (scrollable) -->
                <RowDefinition Height="Auto" />   <!-- Breadcrumb -->
            </Grid.RowDefinitions>

            <!-- Page Header -->
            <Label Grid.Row="0"
                   Text="{Binding PageHeaderText, Source={x:Reference Page}}" 
                   Style="{StaticResource PageHeaderLabel}" />

            <!-- Form Section: Add/Edit Category -->
            <Frame Grid.Row="1" 
                   Style="{StaticResource WelcomeCardStyle}"
                   Padding="16">
                <VerticalStackLayout Spacing="12">
                    <!-- Section Title -->
                    <Label Text="{Binding NewButtonText}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           Margin="0,0,0,8" />

                    <!-- Input Field -->
                    <Entry Placeholder="{Binding NamePlaceholder}" 
                           Text="{Binding NewCategoryName, Mode=TwoWay}"
                           FontSize="16"
                           HeightRequest="48"
                           ClearButtonVisibility="WhileEditing" />

                    <!-- Action Buttons -->
                    <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
                        <Button Grid.Column="1"
                                Text="{Binding NewButtonText}" 
                                Style="{StaticResource OutlineActionButtonSmall}" 
                                BackgroundColor="Transparent" 
                                TextColor="{StaticResource Primary}" 
                                Command="{Binding NewCommand}"
                                WidthRequest="100" />
                        <Button Grid.Column="2"
                                Text="{Binding SaveButtonText}" 
                                Style="{StaticResource PrimaryButtonSmall}" 
                                BackgroundColor="{StaticResource Primary}" 
                                TextColor="White" 
                                Command="{Binding SaveCommand}"
                                WidthRequest="100" />
                        <Button Grid.Column="3"
                                Text="{Binding DeleteButtonText}" 
                                Style="{StaticResource DangerButtonSmall}" 
                                BackgroundColor="Crimson" 
                                TextColor="White" 
                                Command="{Binding DeleteCommand}"
                                WidthRequest="100" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- List Section: Categories Overview -->
            <Frame Grid.Row="2" 
                   Style="{StaticResource WelcomeCardStyle}"
                   Padding="0"
                   MinimumHeightRequest="300"
                   MaximumHeightRequest="500">
                <Grid RowDefinitions="Auto,*" RowSpacing="0">
                    <!-- List Header -->
                    <Grid Grid.Row="0" 
                          BackgroundColor="{StaticResource Primary}" 
                          Padding="16,12">
                        <Label Text="{Binding PageHeaderText, Source={x:Reference Page}}" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />
                    </Grid>

                    <!-- Scrollable List -->
                    <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand">
                        <CollectionView ItemsSource="{Binding Categorien}" 
                                        SelectionMode="Single" 
                                        SelectedItem="{Binding SelectedCategorie, Mode=TwoWay}"
                                        EmptyView="Geen categorieën gevonden">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Categorie">
                                    <Grid Padding="16,12" 
                                          ColumnDefinitions="*,Auto"
                                          BackgroundColor="Transparent">
                                        
                                        <!-- Category Name -->
                                        <Label Grid.Column="0"
                                               Text="{Binding Naam}" 
                                               FontSize="15"
                                               TextColor="{StaticResource Gray900}"
                                               VerticalOptions="Center" />
                                        
                                        <!-- Visual Separator -->
                                        <BoxView Grid.ColumnSpan="2"
                                                 HeightRequest="1"
                                                 Color="{StaticResource Gray200}"
                                                 VerticalOptions="End"
                                                 HorizontalOptions="Fill" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Grid>
            </Frame>

            <!-- Breadcrumb / Overview -->
            <VerticalStackLayout Grid.Row="3" Spacing="8" Margin="0,8,0,0">
                <Label Text="{Binding OverviewText}" 
                       HorizontalOptions="Center" 
                       HorizontalTextAlignment="Center" 
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold" 
                       FontSize="14" />

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="{Binding OverviewText}" 
                           TextColor="{StaticResource Gray600}" 
                           FontSize="12" />
                    <Label Text="•" 
                           TextColor="{StaticResource Gray400}" 
                           FontSize="12" />
                    <Label Text="{Binding DetailsLabel}" 
                           TextColor="{StaticResource Gray600}" 
                           FontSize="12" />
                    <Label Text="•" 
                           TextColor="{StaticResource Gray400}" 
                           FontSize="12" />
                    <Label Text="{Binding EditLabel}" 
                           TextColor="{StaticResource Gray600}" 
                           FontSize="12" />
                    <Label Text="•" 
                           TextColor="{StaticResource Gray400}" 
                           FontSize="12" />
                    <Label Text="{Binding DeleteLabel}" 
                           TextColor="{StaticResource Gray600}" 
                           FontSize="12" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>