<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Biblio_App.ViewModels"
             x:Class="Biblio_App.Pages.Boek.BoekCreatePage"
             x:DataType="viewmodel:BoekenViewModel"
             x:Name="Page"
             Title="{Binding PageHeaderText, Source={x:Reference Page}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="{Binding PageHeaderText, Source={x:Reference Page}}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource White}" />

            <Frame Style="{StaticResource WelcomeCardStyle}">
                <VerticalStackLayout Spacing="8">
                    <Entry Placeholder="{Binding TitelPlaceholder, Source={x:Reference Page}}" Text="{Binding Titel, Mode=TwoWay}" />
                    <Entry Placeholder="{Binding AuteurPlaceholder, Source={x:Reference Page}}" Text="{Binding Auteur, Mode=TwoWay}" />
                    <Entry Placeholder="{Binding IsbnPlaceholder, Source={x:Reference Page}}" Text="{Binding Isbn, Mode=TwoWay}" />
                    <Picker Title="{Binding CategoryTitle, Source={x:Reference Page}}" ItemsSource="{Binding Categorien}" ItemDisplayBinding="{Binding Naam}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" />

                    <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                        <Button Text="{Binding CancelButtonText, Source={x:Reference Page}}" Clicked="OnCancelClicked" Style="{StaticResource OutlineActionButton}" />
                        <Button Text="{Binding SaveButtonText, Source={x:Reference Page}}" Command="{Binding OpslaanCommand}" Style="{StaticResource PrimaryButton}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>