<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Biblio_Models.Entiteiten;assembly=Biblio_Models"
             x:Class="Biblio_App.Pages.BoekDetailsPage"
             x:DataType="models:Boek"
             Title="Boek details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Boek details" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource White}" />

            <Frame Style="{StaticResource WelcomeCardStyle}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Titel}" FontAttributes="Bold" FontSize="18" TextColor="{StaticResource Gray900}" />
                    <Label Text="{Binding Auteur}" FontSize="14" TextColor="{StaticResource Gray900}" />
                    <Label Text="{Binding Isbn}" FontSize="14" TextColor="{StaticResource Gray900}" />
                    <Label Text="{Binding categorie.Naam, StringFormat='Categorie: {0}'}" FontSize="14" TextColor="{StaticResource Gray900}" />

                    <!-- Buttons aligned to the right and using PrimaryButton style -->
                    <HorizontalStackLayout HorizontalOptions="End" Spacing="12" VerticalOptions="Center">
                        <Button Style="{StaticResource PrimaryButton}"
                                Text="Bewerk"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCommand}"
                                WidthRequest="120"
                                HorizontalOptions="End" />
                        <Button Style="{StaticResource PrimaryButton}"
                                Text="Terug"
                                Clicked="OnBackClicked"
                                WidthRequest="120"
                                HorizontalOptions="End" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>