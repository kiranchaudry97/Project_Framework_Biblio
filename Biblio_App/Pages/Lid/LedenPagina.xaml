<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Biblio_App.ViewModels"
             xmlns:models="clr-namespace:Biblio_Models.Entiteiten;assembly=Biblio_Models"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Class="Biblio_App.Pages.LedenPagina"
             
             mc:Ignorable="d"
             Title="{Binding PageTitle}"
             x:Name="Page">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="0,0,8,0" VerticalOptions="Center">
            <!-- named TitleLabel so code-behind can force-update the displayed title when language changes -->
            <Label x:Name="TitleLabel" Text="{Binding PageTitle}" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" TextColor="{StaticResource White}" Grid.Column="0" />

            <!-- Replaced Picker with a tappable Label so text is white on all platforms -->
            <Label x:Name="PageLanguageLabel"
                   Grid.Column="1"
                   WidthRequest="48"
                   Margin="0,0,12,0"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   TextColor="{StaticResource White}"
                   BackgroundColor="Transparent"
                   HorizontalTextAlignment="End"
                   IsVisible="False" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="{Binding PageTitle}" Style="{StaticResource PageHeaderLabel}" HorizontalOptions="Center" />

            <Frame Style="{StaticResource WelcomeCardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Entry Placeholder="{Binding SearchPlaceholder}" HorizontalOptions="FillAndExpand" Text="{Binding SearchText}" />
                            <Button Text="{Binding SearchButtonText}" Command="{Binding ZoekCommand}" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="8">
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <CollectionView ItemsSource="{Binding Leden}" SelectionMode="Single" SelectedItem="{Binding SelectedLid, Mode=TwoWay}" VerticalOptions="FillAndExpand">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10" Margin="4">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label FontAttributes="Bold">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Voornaam}" />
                                                        <Span Text=" " />
                                                        <Span Text="{Binding AchterNaam}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <Label Text="{Binding Email}" FontSize="12" TextColor="{StaticResource Gray500}" />
                                        </VerticalStackLayout>

                                        <HorizontalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">

                                            <ImageButton Source="details_illustration.svg"
                                                         WidthRequest="24"
                                                         HeightRequest="24"
                                                         BackgroundColor="Transparent"
                                                         Clicked="OnDetailsClicked"
                                                         AutomationProperties.Name="{Binding DetailsButtonText, Source={x:Reference Page}}" />

                                            <ImageButton Source="edit_illustration.svg"
                                                         WidthRequest="24"
                                                         HeightRequest="24"
                                                         BackgroundColor="Transparent"
                                                         Clicked="OnEditClicked"
                                                         CommandParameter="{Binding .}"
                                                         AutomationProperties.Name="{Binding EditButtonText, Source={x:Reference Page}}" />

                                            <ImageButton Source="delete_illustration.svg"
                                                         WidthRequest="24"
                                                         HeightRequest="24"
                                                         BackgroundColor="Transparent"
                                                         Command="{Binding ItemDeleteCommand, Source={x:Reference Page}}"
                                                         CommandParameter="{Binding .}"
                                                         AutomationProperties.Name="{Binding DeleteButtonText, Source={x:Reference Page}}" />

                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Overview / breadcrumb similar to books page -->
                    <Label Text="{Binding PageHeaderText, Source={x:Reference Page}}" HorizontalOptions="Fill" HorizontalTextAlignment="Center" TextColor="{StaticResource Primary}"
                           FontAttributes="Bold" FontSize="14" Margin="0,18,0,6" />

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="12" Padding="0,0,0,6">
                        <Label Text="{Binding OverviewText}" TextColor="{StaticResource Gray700}" FontAttributes="Bold" />
                        <Label Text="-" TextColor="{StaticResource Gray400}" />
                        <Label Text="{Binding DetailsButtonText}" TextColor="{StaticResource Gray700}" />
                        <Label Text="-" TextColor="{StaticResource Gray400}" />
                        <Label Text="{Binding EditButtonText}" TextColor="{StaticResource Gray700}" />
                        <Label Text="-" TextColor="{StaticResource Gray400}" />
                        <Label Text="{Binding DeleteButtonText}" TextColor="{StaticResource Gray700}" />
                    </HorizontalStackLayout>

                    <Border Stroke="{StaticResource Gray100}" StrokeThickness="1" Padding="10">
                        <VerticalStackLayout Spacing="8">
                            <Entry x:Name="VoornaamEntry" Text="{Binding Voornaam, Mode=TwoWay}" Placeholder="{Binding FirstNamePlaceholder}" />
                            <Entry x:Name="AchternaamEntry" Text="{Binding Achternaam, Mode=TwoWay}" Placeholder="{Binding LastNamePlaceholder}" />
                            <Entry x:Name="EmailEntry" Text="{Binding Email, Mode=TwoWay}" Placeholder="{Binding EmailPlaceholder}" Keyboard="Email" />
                            <Entry x:Name="TelefoonEntry" Text="{Binding Telefoon, Mode=TwoWay}" Placeholder="{Binding PhonePlaceholder}" Keyboard="Telephone" />

                            <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                                <Button Text="{Binding NewButtonText, FallbackValue='Nieuw'}"
                                        Command="{Binding NieuwCommand}"
                                        Style="{StaticResource OutlineActionButtonSmall}" />
                                <Button Text="{Binding DeleteButtonText}"
                                        Command="{Binding VerwijderCommand}"
                                        Style="{StaticResource DangerButtonSmall}" />
                                <Button Text="{Binding SaveButtonText}"
                                        Command="{Binding OpslaanCommand}"
                                        Style="{StaticResource PrimaryButtonSmall}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>