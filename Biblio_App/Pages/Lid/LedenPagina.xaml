<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Biblio_App.ViewModels"
             xmlns:models="clr-namespace:Biblio_Models.Entiteiten;assembly=Biblio_Models"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Class="Biblio_App.Pages.LedenPagina"
             x:DataType="viewmodel:LedenViewModel"
             mc:Ignorable="d"
             d:DataType="viewmodel:LedenViewModel"
             Title="{Binding PageTitle}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="0,0,8,0" VerticalOptions="Center">
            <Label Text="{Binding PageTitle}" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" TextColor="{StaticResource White}" Grid.Column="0" />

            <!-- Replaced Picker with a tappable Label so text is white on all platforms -->
            <Label x:Name="PageLanguageLabel"
                   Grid.Column="1"
                   WidthRequest="48"
                   Margin="0,0,12,0"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   TextColor="{StaticResource White}"
                   BackgroundColor="Transparent"
                   HorizontalTextAlignment="End" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="{Binding PageTitle}" Style="{StaticResource PageHeaderLabel}" HorizontalOptions="Center" />

            <Frame Style="{StaticResource WelcomeCardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Entry Placeholder="{Binding SearchPlaceholder}" HorizontalOptions="FillAndExpand" Text="{Binding SearchText}" />
                            <Button Text="{Binding SearchButtonText}" Command="{Binding ZoekCommand}" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="8">
                            <Button Text="{Binding NewButtonText}" Command="{Binding NieuwCommand}" Style="{StaticResource OutlineActionButton}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <CollectionView ItemsSource="{Binding Leden}" SelectionMode="Single" SelectedItem="{Binding SelectedLid, Mode=TwoWay}" VerticalOptions="FillAndExpand">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Lid">
                                <Frame Padding="10" Margin="4">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label FontAttributes="Bold">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Voornaam}" />
                                                        <Span Text=" " />
                                                        <Span Text="{Binding AchterNaam}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <Label Text="{Binding Email}" FontSize="12" TextColor="{StaticResource Gray500}" />
                                        </VerticalStackLayout>

                                        <HorizontalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">

                                            <Button Text="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DetailsButtonText}"
                                                    ImageSource="details_illustration.svg"
                                                    ContentLayout="Top,2"
                                                    WidthRequest="64"
                                                    HeightRequest="64"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ItemDetailsCommand}"
                                                    CommandParameter="{Binding .}"
                                                    AutomationProperties.Name="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DetailsButtonText}" />

                                            <Button Text="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditButtonText}"
                                                    ImageSource="edit_illustration.svg"
                                                    ContentLayout="Top,2"
                                                    WidthRequest="64"
                                                    HeightRequest="64"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ItemEditCommand}"
                                                    CommandParameter="{Binding .}"
                                                    AutomationProperties.Name="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditButtonText}" />

                                            <Button Text="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteButtonText}"
                                                    ImageSource="delete_illustration.svg"
                                                    ContentLayout="Top,2"
                                                    WidthRequest="64"
                                                    HeightRequest="64"
                                                    BackgroundColor="Crimson"
                                                    TextColor="White"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ItemDeleteCommand}"
                                                    CommandParameter="{Binding .}"
                                                    AutomationProperties.Name="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteButtonText}" />

                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Border Stroke="{StaticResource Gray100}" StrokeThickness="1" Padding="10">
                        <VerticalStackLayout Spacing="8">
                            <Entry x:Name="VoornaamEntry" Text="{Binding Voornaam, Mode=TwoWay}" Placeholder="{Binding FirstNamePlaceholder}" />
                            <Entry x:Name="AchternaamEntry" Text="{Binding Achternaam, Mode=TwoWay}" Placeholder="{Binding LastNamePlaceholder}" />
                            <Entry x:Name="EmailEntry" Text="{Binding Email, Mode=TwoWay}" Placeholder="{Binding EmailPlaceholder}" Keyboard="Email" />
                            <Entry x:Name="TelefoonEntry" Text="{Binding Telefoon, Mode=TwoWay}" Placeholder="{Binding PhonePlaceholder}" Keyboard="Telephone" />

                            <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                                <Button Text="{Binding NewButtonText}" Command="{Binding NieuwCommand}" Style="{StaticResource OutlineActionButton}" />
                                <Button Text="{Binding DeleteButtonText}" Command="{Binding VerwijderCommand}" BackgroundColor="Crimson" TextColor="White" />
                                <Button Text="{Binding SaveButtonText}" Command="{Binding OpslaanCommand}" Style="{StaticResource PrimaryButton}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>