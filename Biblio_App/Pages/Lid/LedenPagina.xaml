<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Biblio_App.ViewModels"
             xmlns:models="clr-namespace:Biblio_Models.Entiteiten;assembly=Biblio_Models"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Class="Biblio_App.Pages.LedenPagina"
             x:DataType="viewmodel:LedenViewModel"
             mc:Ignorable="d"
             Title="{Binding PageTitle}"
             x:Name="Page">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="0,0,8,0" VerticalOptions="Center" BackgroundColor="{StaticResource Primary}">
            <!-- genaamd TitleLabel zodat code-behind de weergegeven titel geforceerd kan updaten wanneer de taal wijzigt -->
            <Label x:Name="TitleLabel" Text="{Binding PageTitle}" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" TextColor="White" Grid.Column="0" />

            <!-- Vervangen Picker met een tappable Label zodat tekst wit is op alle platforms -->
            <Label x:Name="PageLanguageLabel"
                   Grid.Column="1"
                   WidthRequest="48"
                   Margin="0,0,12,0"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   TextColor="{StaticResource White}"
                   BackgroundColor="Transparent"
                   HorizontalTextAlignment="End"
                   IsVisible="False" />
        </Grid>
    </Shell.TitleView>

    <ScrollView BackgroundColor="White">
        <VerticalStackLayout Padding="12" Spacing="12" BackgroundColor="White">
            <Label Text="{Binding PageTitle}" Style="{StaticResource PageHeaderLabel}" HorizontalOptions="Center" TextColor="#212121" FontSize="20" Margin="0,8,0,8" />

            <Frame Style="{StaticResource WelcomeCardStyle}" BackgroundColor="White" Padding="12">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="8">
                        <Entry Placeholder="{Binding SearchPlaceholder}" 
                               HorizontalOptions="FillAndExpand" 
                               Text="{Binding SearchText}" 
                               Style="{StaticResource SearchEntry}"
                               BackgroundColor="#F5F5F5"
                               HeightRequest="50"
                               FontSize="16" />
                        <Button Text="{Binding SearchButtonText}" 
                                Command="{Binding ZoekCommand}" 
                                Style="{StaticResource FilterButton}"
                                HorizontalOptions="FillAndExpand"
                                HeightRequest="45" />
                    </VerticalStackLayout>

                    <CollectionView ItemsSource="{Binding Leden}" 
                                    SelectionMode="Single" 
                                    SelectedItem="{Binding SelectedLid, Mode=TwoWay}" 
                                    BackgroundColor="White"
                                    MinimumHeightRequest="200"
                                    MaximumHeightRequest="400"
                                    Margin="0,8,0,8">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Lid">
                                <Border Stroke="#E0E0E0" 
                                        StrokeThickness="0.5" 
                                        Padding="12" 
                                        Margin="0,4" 
                                        BackgroundColor="#F9F9F9"
                                        StrokeShape="RoundRectangle 4">
                                    <VerticalStackLayout Spacing="6">
                                        <Label FontAttributes="Bold" TextColor="#212121" FontSize="16">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Voornaam}" />
                                                    <Span Text=" " />
                                                    <Span Text="{Binding AchterNaam}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding Email}" FontSize="13" TextColor="#6E6E6E" LineBreakMode="TailTruncation" />
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Overview / breadcrumb - verkorte versie voor mobiel -->
                    <Label Text="{Binding PageHeaderText}" 
                           HorizontalOptions="Center" 
                           HorizontalTextAlignment="Center" 
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold" 
                           FontSize="14" 
                           Margin="0,12,0,8" />

                    <Border Stroke="#E1E1E1" StrokeThickness="1" Padding="12" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Spacing="12">
                            <Entry x:Name="VoornaamEntry" 
                                   Text="{Binding Voornaam, Mode=TwoWay}" 
                                   Placeholder="{Binding FirstNamePlaceholder}" 
                                   BackgroundColor="#F5F5F5" 
                                   TextColor="#212121" 
                                   PlaceholderColor="#6E6E6E"
                                   HeightRequest="50"
                                   FontSize="16" />
                            <Entry x:Name="AchternaamEntry" 
                                   Text="{Binding Achternaam, Mode=TwoWay}" 
                                   Placeholder="{Binding LastNamePlaceholder}" 
                                   BackgroundColor="#F5F5F5" 
                                   TextColor="#212121" 
                                   PlaceholderColor="#6E6E6E"
                                   HeightRequest="50"
                                   FontSize="16" />
                            <Entry x:Name="EmailEntry" 
                                   Text="{Binding Email, Mode=TwoWay}" 
                                   Placeholder="{Binding EmailPlaceholder}" 
                                   Keyboard="Email" 
                                   BackgroundColor="#F5F5F5" 
                                   TextColor="#212121" 
                                   PlaceholderColor="#6E6E6E"
                                   HeightRequest="50"
                                   FontSize="16" />
                            <Entry x:Name="TelefoonEntry" 
                                   Text="{Binding Telefoon, Mode=TwoWay}" 
                                   Placeholder="{Binding PhonePlaceholder}" 
                                   Keyboard="Telephone" 
                                   BackgroundColor="#F5F5F5" 
                                   TextColor="#212121" 
                                   PlaceholderColor="#6E6E6E"
                                   HeightRequest="50"
                                   FontSize="16" />

                            <VerticalStackLayout Spacing="8" Margin="0,8,0,0">
                                <Button Text="{Binding NewButtonText, FallbackValue='Nieuw'}"
                                        Command="{Binding NieuwCommand}"
                                        Style="{StaticResource OutlineActionButtonSmall}"
                                        HorizontalOptions="FillAndExpand"
                                        HeightRequest="45" />
                                <Button Text="{Binding DeleteButtonText}"
                                        Command="{Binding VerwijderCommand}"
                                        Style="{StaticResource DangerButtonSmall}"
                                        HorizontalOptions="FillAndExpand"
                                        HeightRequest="45" />
                                <Button Text="{Binding SaveButtonText}"
                                        Command="{Binding OpslaanCommand}"
                                        Style="{StaticResource PrimaryButtonSmall}"
                                        HorizontalOptions="FillAndExpand"
                                        HeightRequest="45" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>