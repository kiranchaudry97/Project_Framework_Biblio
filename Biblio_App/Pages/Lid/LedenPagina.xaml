<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Biblio_App.ViewModels"
             xmlns:models="clr-namespace:Biblio_Models.Entiteiten;assembly=Biblio_Models"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="Biblio_App.Pages.LedenPagina"
             x:DataType="viewmodel:LedenViewModel"
             mc:Ignorable="d"
             Title="{Binding PageTitle}"
             x:Name="Page">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="0,0,8,0" VerticalOptions="Center" BackgroundColor="{StaticResource Primary}">
            <!-- genaamd TitleLabel zodat code-behind de weergegeven titel geforceerd kan updaten wanneer de taal wijzigt -->
            <Label x:Name="TitleLabel" Text="{Binding PageTitle}" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" TextColor="White" Grid.Column="0" />

            <!-- Vervangen Picker met een tappable Label zodat tekst wit is op alle platforms -->
            <Label x:Name="PageLanguageLabel"
                   Grid.Column="1"
                   WidthRequest="48"
                   Margin="0,0,12,0"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   TextColor="{StaticResource White}"
                   BackgroundColor="Transparent"
                   HorizontalTextAlignment="End"
                   IsVisible="False" />
        </Grid>
    </Shell.TitleView>

    <ScrollView BackgroundColor="White">
        <VerticalStackLayout Padding="20" Spacing="12" BackgroundColor="White">
            <Label Text="{Binding PageTitle}" Style="{StaticResource PageHeaderLabel}" HorizontalOptions="Center" TextColor="#212121" />

            <Frame Style="{StaticResource WelcomeCardStyle}" BackgroundColor="White">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Entry Placeholder="{Binding SearchPlaceholder}" 
                                   HorizontalOptions="FillAndExpand" 
                                   Text="{Binding SearchText}" 
                                   Style="{StaticResource SearchEntry}"
                                   BackgroundColor="#F5F5F5" />
                            <Button Text="{Binding SearchButtonText}" 
                                    Command="{Binding ZoekCommand}" 
                                    Style="{StaticResource FilterButton}" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="8">
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <CollectionView ItemsSource="{Binding Leden}" SelectionMode="Single" SelectedItem="{Binding SelectedLid, Mode=TwoWay}" VerticalOptions="FillAndExpand" BackgroundColor="White">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Lid">
                                <Frame Padding="10" Margin="4" BackgroundColor="#F9F9F9">
                                    <VerticalStackLayout Spacing="4">
                                        <Label FontAttributes="Bold" TextColor="#212121">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Voornaam}" />
                                                    <Span Text=" " />
                                                    <Span Text="{Binding AchterNaam}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding Email}" FontSize="12" TextColor="#6E6E6E" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Overview / breadcrumb similar to books page -->
                    <Label Text="{Binding PageHeaderText}" HorizontalOptions="Fill" HorizontalTextAlignment="Center" TextColor="{StaticResource Primary}"
                           FontAttributes="Bold" FontSize="14" Margin="0,18,0,6" />

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="12" Padding="0,0,0,6">
                        <Label Text="{Binding OverviewText}" TextColor="#212121" FontAttributes="Bold" />
                        <Label Text="-" TextColor="#919191" />
                        <Label Text="{Binding DetailsButtonText}" TextColor="#212121" />
                        <Label Text="-" TextColor="#919191" />
                        <Label Text="{Binding EditButtonText}" TextColor="#212121" />
                        <Label Text="-" TextColor="#919191" />
                        <Label Text="{Binding DeleteButtonText}" TextColor="#212121" />
                    </HorizontalStackLayout>

                    <Border Stroke="#E1E1E1" StrokeThickness="1" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="8">
                            <Entry x:Name="VoornaamEntry" Text="{Binding Voornaam, Mode=TwoWay}" Placeholder="{Binding FirstNamePlaceholder}" BackgroundColor="#F5F5F5" TextColor="#212121" PlaceholderColor="#6E6E6E" />
                            <Entry x:Name="AchternaamEntry" Text="{Binding Achternaam, Mode=TwoWay}" Placeholder="{Binding LastNamePlaceholder}" BackgroundColor="#F5F5F5" TextColor="#212121" PlaceholderColor="#6E6E6E" />
                            <Entry x:Name="EmailEntry" Text="{Binding Email, Mode=TwoWay}" Placeholder="{Binding EmailPlaceholder}" Keyboard="Email" BackgroundColor="#F5F5F5" TextColor="#212121" PlaceholderColor="#6E6E6E" />
                            <Entry x:Name="TelefoonEntry" Text="{Binding Telefoon, Mode=TwoWay}" Placeholder="{Binding PhonePlaceholder}" Keyboard="Telephone" BackgroundColor="#F5F5F5" TextColor="#212121" PlaceholderColor="#6E6E6E" />

                            <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                                <Button Text="{Binding NewButtonText, FallbackValue='Nieuw'}"
                                        Command="{Binding NieuwCommand}"
                                        Style="{StaticResource OutlineActionButtonSmall}" />
                                <Button Text="{Binding DeleteButtonText}"
                                        Command="{Binding VerwijderCommand}"
                                        Style="{StaticResource DangerButtonSmall}" />
                                <Button Text="{Binding SaveButtonText}"
                                        Command="{Binding OpslaanCommand}"
                                        Style="{StaticResource PrimaryButtonSmall}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>