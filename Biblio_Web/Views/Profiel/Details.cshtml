@model Biblio_Web.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profiel details";
}

<h1>Profiel details</h1>

<div class="card mb-3" style="max-width:540px;">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName (@Model.UserName)</h5>
        <p class="card-text"><strong>E-mail:</strong> @Model.Email</p>
        <p class="card-text"><strong>Rollen:</strong> @string.Join(", ", Model.Roles)</p>

        <a asp-action="Edit" class="btn btn-primary">Bewerk profiel</a>
        <a asp-action="ChangePassword" class="btn btn-outline-secondary ms-2">Wijzig wachtwoord</a>
    </div>
</div>