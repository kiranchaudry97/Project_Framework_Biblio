@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Biblio_Web.SharedResource> Localizer
@model Biblio_Models.Entiteiten.Lid
@{
    ViewData["Title"] = Localizer["Edit"];
}

<h1>@Localizer["Edit"]</h1>

<div class="text-center mb-3">
    <img src="~/images/edit-illustration.svg" alt="Edit illustration" class="img-fluid" style="max-width:80px; width:80px; height:auto; display:inline-block;" />
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">@Localizer["Voornaam"]</label>
        <input asp-for="Voornaam" class="form-control" />
        <span asp-validation-for="Voornaam" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer["Achternaam"]</label>
        <input asp-for="AchterNaam" class="form-control" />
        <span asp-validation-for="AchterNaam" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer["Email"]</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">@Localizer["Save"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
