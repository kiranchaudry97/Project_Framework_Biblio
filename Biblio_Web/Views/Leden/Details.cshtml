@model Biblio_Models.Entiteiten.Lid
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<h1>@Localizer["Title"]</h1>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Localizer["Naam"]</dt>
            <dd class="col-sm-9">@Model.Voornaam @Model.AchterNaam</dd>

            <dt class="col-sm-3">@Localizer["Email"]</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">@Localizer["Telefoon"]</dt>
            <dd class="col-sm-9">@Model.Telefoon</dd>

            <dt class="col-sm-3">@Localizer["Adres"]</dt>
            <dd class="col-sm-9">@Model.Adres</dd>

            <dt class="col-sm-3">@Localizer["Created"]</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

            <dt class="col-sm-3">@Localizer["LoanCount"]</dt>
            <dd class="col-sm-9">@Model.Leningens?.Count()</dd>
        </dl>

        <a asp-action="Index" class="btn btn-secondary">@Localizer["Back"]</a>
    </div>
</div>