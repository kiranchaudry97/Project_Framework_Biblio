@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IStringLocalizer<Biblio_Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["WelcomeBiblio"];
    var subtitleLoc = Localizer["WelcomeSubtitlePart1"];
    string subtitle = subtitleLoc.ResourceNotFound && System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "nl"
        ? "beheer eenvoudige boeken , leden en uitleningen vanuit dit dashboard. Gebruik het menu of de navigatie linkerkant om te starten"
        : subtitleLoc.Value;
}

<div class="d-flex justify-content-center py-5">
    <div class="card w-75 shadow-sm p-4">
        <div class="card-body text-center">
            <h1 class="card-title display-6">@Localizer["WelcomeTitle"]</h1>
            <p class="card-text text-muted mb-4">@subtitle</p>

            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Boeken" asp-action="Index" class="btn btn-primary">@Localizer["ManageBooks"]</a>
                <a asp-controller="Leden" asp-action="Index" class="btn btn-primary">@Localizer["ManageMembers"]</a>
            </div>
        </div>
    </div>
</div>
