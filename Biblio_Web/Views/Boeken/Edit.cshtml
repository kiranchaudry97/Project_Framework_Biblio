@model Biblio_Models.Entiteiten.Boek
@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Linq
@inject Microsoft.Extensions.Localization.IStringLocalizer<Biblio_Web.SharedResource> L
@{
    var title = L["Edit"] + " " + L["Book"];
    ViewData["Title"] = title;
}

<h1>@L["Edit"] @L["Book"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">@L["Titel"]</label>
        <input asp-for="Titel" class="form-control" />
        <span asp-validation-for="Titel" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@L["Auteur"]</label>
        <input asp-for="Auteur" class="form-control" />
        <span asp-validation-for="Auteur" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@L["ISBN"]</label>
        <input asp-for="Isbn" class="form-control" />
        <span asp-validation-for="Isbn" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@L["Categorie"]</label>
        @{ var categories = ViewBag.Categories as IEnumerable<Biblio_Models.Entiteiten.Categorie> ?? Enumerable.Empty<Biblio_Models.Entiteiten.Categorie>(); }
        <select asp-for="CategorieID" class="form-select" asp-items="@(new SelectList(categories, "Id", "Naam", Model?.CategorieID))">
            <option value="">@L["ChooseCategory"]</option>
        </select>
    </div>

    <button class="btn btn-primary">@L["Save"]</button>
    <a asp-action="Index" class="btn btn-secondary">@L["Cancel"]</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}