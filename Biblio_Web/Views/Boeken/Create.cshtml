@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Biblio_Web.SharedResource> Localizer
@model Biblio_Models.Entiteiten.Boek
@{
    ViewData["Title"] = Localizer["Books_Create_Title"];
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">@Localizer["ColumnTitle"]</label>
        <input asp-for="Titel" class="form-control" />
        <span asp-validation-for="Titel" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer["ColumnAuthor"]</label>
        <input asp-for="Auteur" class="form-control" />
        <span asp-validation-for="Auteur" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer["ColumnIsbn"]</label>
        <input asp-for="Isbn" class="form-control" />
        <span asp-validation-for="Isbn" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer["ColumnCategory"]</label>
        <select asp-for="CategorieID" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Naam"))">
            <option value="">@Localizer["ChooseCategory"]</option>
        </select>
    </div>

    <button class="btn btn-primary">@Localizer["Save"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}