@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Biblio_Web.SharedResource> Localizer
@inject Microsoft.AspNetCore.Authorization.IAuthorizationService AuthorizationService
@model IEnumerable<Biblio_Models.Entiteiten.Boek>
@{
    ViewData["Title"] = Localizer["Books"];
    var canCreate = AuthorizationService.AuthorizeAsync(User, null, "RequireStaff").GetAwaiter().GetResult().Succeeded;
    var canModify = AuthorizationService.AuthorizeAsync(User, null, "RequireStaff").GetAwaiter().GetResult().Succeeded;

    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var search = (string?)(ViewBag.Search ?? "");
    var selectedCategory = ViewBag.SelectedCategory as int?;
}

<h1 class="mb-2">@ViewData["Title"]</h1>

<!-- Books illustration -->
<div class="text-center mb-3">
    <img src="~/images/books-illustration.svg" alt="Books illustration" class="img-fluid" style="max-width:120px; width:120px; height:auto; display:inline-block;" />
</div>

<form method="get" class="row g-2">
    <div class="col-auto">
        <input type="text" name="search" value="@System.Net.WebUtility.HtmlEncode(search)" class="form-control" placeholder="@Localizer["SearchPlaceholder"]" />
    </div>
    <div class="col-auto">
        <select name="categoryId" class="form-select">
            <option value="">@Localizer["ChooseCategory"]</option>
            @if (ViewBag.Categories != null)
            {
                foreach (var c in (IEnumerable<Biblio_Models.Entiteiten.Categorie>)ViewBag.Categories)
                {
                    var isSelected = selectedCategory.HasValue && selectedCategory.Value == c.Id;
                    if (isSelected)
                    {
                        <option value="@c.Id" selected>@c.Naam</option>
                    }
                    else
                    {
                        <option value="@c.Id">@c.Naam</option>
                    }
                }
            }
        </select>
    </div>
    <div class="col-auto">
        <button class="btn btn-primary">@Localizer["Filter"]</button>
    </div>
    <div class="col-auto">
        @if (canCreate)
        {
            <a class="btn btn-success" asp-action="Create">@Localizer["New"]</a>
        }
    </div>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>@Localizer["ColumnTitle"]</th>
            <th>@Localizer["ColumnAuthor"]</th>
            <th>@Localizer["ColumnIsbn"]</th>
            <th>@Localizer["ColumnCategory"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach(var b in Model)
{
    <tr>
        <td><img src="~/images/books-illustration.svg" alt="" style="width:24px;height:auto;margin-right:8px;vertical-align:middle;" />@b.Titel</td>
        <td>@b.Auteur</td>
        <td>@b.Isbn</td>
        <td>@b.categorie?.Naam</td>
        <td>
            @if (canModify)
            {
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@b.Id">@Localizer["Edit"]</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@b.Id">@Localizer["Delete"]</a>
            }
            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@b.Id">@Localizer["Details"]</a>
        </td>
    </tr>
}
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="?search=@System.Net.WebUtility.UrlEncode(search)&categoryId=@selectedCategory&page=@(currentPage-1)&pageSize=@pageSize">@Localizer["Back"]</a>
        </li>
        @for (int p = 1; p <= totalPages; p++)
        {
            <li class="page-item @(p == currentPage ? "active" : "")"><a class="page-link" href="?search=@System.Net.WebUtility.UrlEncode(search)&categoryId=@selectedCategory&page=@p&pageSize=@pageSize">@p</a></li>
        }
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" href="?search=@System.Net.WebUtility.UrlEncode(search)&categoryId=@selectedCategory&page=@(currentPage+1)&pageSize=@pageSize">@Localizer["Next"]</a>
        </li>
    </ul>
</nav>