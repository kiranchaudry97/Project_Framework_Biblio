@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<Biblio_Models.Entiteiten.Boek>
@inject Microsoft.Extensions.Localization.IStringLocalizer<Biblio_Web.SharedResource> L
@inject Microsoft.AspNetCore.Authorization.IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = L["Books"];
    var canCreate = AuthorizationService.AuthorizeAsync(User, null, "RequireStaff").GetAwaiter().GetResult().Succeeded;

    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
}

<h1>@L["Books"]</h1>

<form method="get" class="row g-2">
    <div class="col-auto">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="@L["SearchPlaceholder"]" />
    </div>
    <div class="col-auto">
        <select name="categoryId" class="form-select">
            <option value="">@L["ChooseCategory"]</option>
            @if (ViewBag.Categories != null)
            {
                foreach (var c in (IEnumerable<Biblio_Models.Entiteiten.Categorie>)ViewBag.Categories)
                {
                    var selected = ViewBag.SelectedCategory != null && ((int)ViewBag.SelectedCategory) == c.Id ? "selected" : "";
                    <option value="@c.Id" @Html.Raw(selected)>@c.Naam</option>
                }
            }
        </select>
    </div>
    <div class="col-auto">
        <button class="btn btn-primary">@L["Filter"]</button>
    </div>
    <div class="col-auto">
        @if (canCreate)
        {
            <a class="btn btn-success" href="@Url.Action("Create", "Boeken")">@L["New"]</a>
        }
        else if (User?.Identity?.IsAuthenticated != true)
        {
            <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">@L["SignIn"]</a>
        }
    </div>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>@L["ColumnTitle"]</th>
            <th>@L["ColumnAuthor"]</th>
            <th>@L["ColumnIsbn"]</th>
            <th>@L["ColumnCategory"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach(var b in Model)
{
    <tr>
        <td>@b.Titel</td>
        <td>@b.Auteur</td>
        <td>@b.Isbn</td>
        <td>@b.categorie?.Naam</td>
        <td>
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@b.Id">@L["Edit"]</a>
            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@b.Id">@L["Details"]</a>
            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@b.Id">@L["Delete"]</a>
        </td>
    </tr>
}
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="?search=@ViewBag.Search&categoryId=@ViewBag.SelectedCategory&page=@(currentPage-1)&pageSize=@pageSize">@L["Back"]</a>
        </li>
        @for (int p = 1; p <= totalPages; p++)
        {
            <li class="page-item @(p == currentPage ? "active" : "")"><a class="page-link" href="?search=@ViewBag.Search&categoryId=@ViewBag.SelectedCategory&page=@p&pageSize=@pageSize">@p</a></li>
        }
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" href="?search=@ViewBag.Search&categoryId=@ViewBag.SelectedCategory&page=@(currentPage+1)&pageSize=@pageSize">@L["Back"]</a>
        </li>
    </ul>
</nav>