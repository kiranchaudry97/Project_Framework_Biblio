@using Biblio_Models.Entiteiten
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Biblio_Web.Models.AdminEditRolesViewModel

@{
    ViewData["Title"] = Localizer["EditRoles"];
}

<h1>@Localizer["EditRolesFor", Model.Email]</h1>

<form method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
@for (int i = 0; i < Model.Roles.Count; i++)
{
    <div class="form-check mb-2">
        <input asp-for="Roles[@i].IsSelected" class="form-check-input" />
        @* display localized role name when available *@
        <label class="form-check-label">@Localizer[Model.Roles[i].RoleName]</label>
        <input type="hidden" asp-for="Roles[@i].RoleName" />
    </div>
}
    </div>
    <button class="btn btn-primary">@Localizer["Save"]</button>
    <a asp-action="Users" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>