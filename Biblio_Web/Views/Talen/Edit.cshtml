@model Biblio_Models.Entiteiten.Taal
@inject Microsoft.Extensions.Localization.IStringLocalizer<Biblio_Web.SharedResource> L
@{
    ViewData["Title"] = L["EditLanguage"] ?? "Edit language";
}

<h1>@L["EditLanguage"]</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">@L["Code"]</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">@L["Name"]</label>
        <input asp-for="Naam" class="form-control" />
        <span asp-validation-for="Naam" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="form-check-label">@L["Active"]</label>
    </div>

    <button class="btn btn-primary">@L["Save"]</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">@L["Cancel"]</a>
</form>
