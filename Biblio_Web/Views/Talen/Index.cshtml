@model IEnumerable<Biblio_Models.Entiteiten.Taal>
@inject Microsoft.Extensions.Localization.IStringLocalizer<Biblio_Web.SharedResource> L
@{
    ViewData["Title"] = L["Languages"] ?? "Languages";
}

<h1>@L["Languages"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@L["Code"]</th>
            <th>@L["Name"]</th>
            <th>@L["Active"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach(var t in Model)
{
    <tr>
        <td>@t.Code</td>
        <td>@t.Naam</td>
        <td>@(t.IsActive ? "Yes" : "No")</td>
        <td>
            @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
            {
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@t.Id">@L["Edit"]</a>
                <a class="btn btn-sm btn-danger ms-1" asp-action="Delete" asp-route-id="@t.Id">@L["Delete"]</a>
            }
        </td>
    </tr>
}
    </tbody>
</table>

@if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
{
    <a class="btn btn-success" asp-action="Create">@L["New"]</a>
}
