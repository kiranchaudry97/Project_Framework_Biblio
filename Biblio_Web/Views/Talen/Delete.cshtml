@model Biblio_Models.Entiteiten.Taal
@inject Microsoft.Extensions.Localization.IStringLocalizer<Biblio_Web.SharedResource> L
@{
    ViewData["Title"] = L["DeleteLanguage"] ?? "Delete language";
}

<h1>@L["DeleteLanguage"]</h1>

<div class="alert alert-warning">
    @L["DeleteLanguageConfirm"]
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <dl class="row">
        <dt class="col-sm-3">@L["Code"]</dt>
        <dd class="col-sm-9">@Model.Code</dd>
        <dt class="col-sm-3">@L["Name"]</dt>
        <dd class="col-sm-9">@Model.Naam</dd>
    </dl>

    <button class="btn btn-danger">@L["Delete"]</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">@L["Cancel"]</a>
</form>
