@model Biblio_Models.Entiteiten.Lenen
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = (Localizer["Delete"] ?? new Microsoft.AspNetCore.Mvc.Localization.LocalizedHtmlString("Delete", "Verwijderen")).Value;
}

<h1>@Localizer["Delete"]</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Localizer["Member"]</dt>
            <dd class="col-sm-9">@Model.Lid?.Voornaam @Model.Lid?.AchterNaam</dd>

            <dt class="col-sm-3">@Localizer["Book"]</dt>
            <dd class="col-sm-9">@Model.Boek?.Titel</dd>

            <dt class="col-sm-3">@Localizer["Start"]</dt>
            <dd class="col-sm-9">@Model.StartDate:d</dd>

            <dt class="col-sm-3">@Localizer["Due"]</dt>
            <dd class="col-sm-9">@Model.DueDate:d</dd>

            <dt class="col-sm-3">@Localizer["Returned"]</dt>
            <dd class="col-sm-9">@(Model.ReturnedAt?.ToString("d") ?? "-")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">@Localizer["Cancel"]</a>
        </form>
    </div>
</div>
