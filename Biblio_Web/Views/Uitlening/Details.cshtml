@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Biblio_Web.SharedResource> Localizer
@model Biblio_Models.Entiteiten.Lenen
@{
    ViewData["Title"] = Localizer["Details"];
}

<h1>@Localizer["Details"]</h1>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Localizer["ColumnTitle"]</dt>
            <dd class="col-sm-9">@Model.Boek?.Titel</dd>

            <dt class="col-sm-3">@Localizer["Member"]</dt>
            <dd class="col-sm-9">@Model.Lid?.Voornaam @Model.Lid?.AchterNaam</dd>

            <dt class="col-sm-3">@Localizer["StartDate"]</dt>
            <dd class="col-sm-9">@Model.StartDate:d</dd>

            <dt class="col-sm-3">@Localizer["DueDate"]</dt>
            <dd class="col-sm-9">@Model.DueDate:d</dd>

            <dt class="col-sm-3">@Localizer["IngeleverdOp"]</dt>
            <dd class="col-sm-9">@(Model.ReturnedAt?.ToString("g") ?? "-")</dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary">@Localizer["Back"]</a>
    </div>
</div>
