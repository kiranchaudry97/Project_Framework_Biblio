@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Identity
@using Biblio_Models.Entiteiten
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Biblio_Web.SharedResource> Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblio_Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblio_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Biblio</a>

                <!-- Single hamburger button: shows offcanvas on small screens only -->
                <button id="mainHamburger" class="btn btn-outline-primary d-lg-none me-2" type="button" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
                        </li>
                        @* Render admin dropdown when user has admin/staff roles *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
                        {
                            <li class="nav-item">
                                @await Html.PartialAsync("_AdminDropdown")
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item me-2">
                            <!-- Theme toggle: show sun / moon icon -->
                            <button id="themeToggle" class="btn btn-outline-secondary btn-sm" aria-label="@Localizer["ToggleTheme"]" title="@Localizer["ToggleTheme"]">
                                <i id="themeToggleIcon" class="bi"></i>
                            </button>
                        </li>
                        <li class="nav-item dropdown me-3">
                            <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper()</a>
                            <ul class="dropdown-menu" aria-labelledby="langDropdown">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Culture"
                                       asp-action="SetLanguage"
                                       asp-route-culture="nl"
                                       asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">NL</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Culture"
                                       asp-action="SetLanguage"
                                       asp-route-culture="en"
                                       asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">EN</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Culture"
                                       asp-action="SetLanguage"
                                       asp-route-culture="fr"
                                       asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">FR</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            @await Component.InvokeAsync("LoginStatus")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Desktop sidebar (md+) -->
            <nav id="sidebar" class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="position-sticky pt-3 px-2">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-2 mb-2 text-muted">@Localizer["Menu"]</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start" asp-controller="Boeken" asp-action="Index"><i class="bi bi-book"></i>&nbsp;@Localizer["Books"]</a></li>
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start" asp-controller="Leden" asp-action="Index"><i class="bi bi-person"></i>&nbsp;@Localizer["Members"]</a></li>
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start" asp-controller="Uitlening" asp-action="Index"><i class="bi bi-receipt"></i>&nbsp;@Localizer["Loans"]</a></li>
                        <li class="nav-item mb-3"><a class="btn btn-primary w-100 text-start" asp-controller="Categorieen" asp-action="Index"><i class="bi bi-tags"></i>&nbsp;@Localizer["Categories"]</a></li>
                    </ul>

                    <h6 class="sidebar-heading px-2 mb-2 text-muted">@Localizer["QuickActions"]</h6>
                    <div class="px-2">
                        @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
                        {
                            <a id="quickNewBook" class="btn btn-outline-secondary w-100 mb-2 d-flex align-items-center" asp-controller="Boeken" asp-action="Create"><i class="bi bi-plus-lg me-2"></i>@Localizer["NewBook"]</a>
                            <a id="quickNewMember" class="btn btn-outline-secondary w-100 mb-2 d-flex align-items-center" asp-controller="Leden" asp-action="Create"><i class="bi bi-person-plus me-2"></i>@Localizer["NewMember"]</a>
                        }
                    </div>
                </div>
            </nav>

            <!-- Offcanvas sidebar for small screens -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasSidebarLabel">@Localizer["Menu"]</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="mb-3">
                        <a class="btn btn-primary w-100 mb-2 text-start" asp-controller="Boeken" asp-action="Index"><i class="bi bi-book"></i>&nbsp;@Localizer["Books"]</a>
                        <a class="btn btn-primary w-100 mb-2 text-start" asp-controller="Leden" asp-action="Index"><i class="bi bi-person"></i>&nbsp;@Localizer["Members"]</a>
                        <a class="btn btn-primary w-100 mb-2 text-start" asp-controller="Uitlening" asp-action="Index"><i class="bi bi-receipt"></i>&nbsp;@Localizer["Loans"]</a>
                        <a class="btn btn-primary w-100 mb-2 text-start" asp-controller="Categorieen" asp-action="Index"><i class="bi bi-tags"></i>&nbsp;@Localizer["Categories"]</a>
                    </div>
                    <h6 class="sidebar-heading px-2 mb-2 text-muted">@Localizer["QuickActions"]</h6>
                    <div>
                        @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
                        {
                            <a id="offcanvasQuickNewBook" class="btn btn-outline-secondary w-100 mb-2 d-flex align-items-center" asp-controller="Boeken" asp-action="Create"><i class="bi bi-plus-lg me-2"></i>@Localizer["NewBook"]</a>
                            <a id="offcanvasQuickNewMember" class="btn btn-outline-secondary w-100 mb-2 d-flex align-items-center" asp-controller="Leden" asp-action="Create"><i class="bi bi-person-plus me-2"></i>@Localizer["NewMember"]</a>
                        }
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <main class="col-md-10 ms-sm-auto px-4">
                <div class="py-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center py-3">
                <span>&copy; 2025 - Biblio</span>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="ms-2">@Localizer["Privacy"]</a>
            </div>
        </div>
    </footer>

    <!-- Language changed toast -->
    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div id="langToast" class="toast position-fixed bottom-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2500" data-show="@(TempData["LanguageChanged"] != null ? "1" : "0")">
            <div class="toast-header">
                <strong class="me-auto">@Localizer["LanguageChanged"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @if (TempData["LanguageChanged"] != null)
                {
                    var c = TempData["LanguageChanged"]?.ToString();
                    @Localizer["LanguageSetTo", c]
                }
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            // Theme toggle
            var toggle = document.getElementById('themeToggle');
            var icon = document.getElementById('themeToggleIcon');
            function setIcon(kind) {
                try {
                    var ic = document.getElementById('themeToggleIcon');
                    if (!ic) return;
                    ic.classList.remove('bi-sun', 'bi-moon');
                    if (kind === 'dark' || kind === 'moon') ic.classList.add('bi-moon'); else ic.classList.add('bi-sun');
                } catch (e) { /* ignore */ }
            }
            function applyTheme(t) {
                if (t === 'dark') { document.body.classList.add('dark-mode'); setIcon('moon'); }
                else { document.body.classList.remove('dark-mode'); setIcon('sun'); }
            }
            var saved = localStorage.getItem('biblio-theme') || 'light';
            applyTheme(saved);
            if (toggle) toggle.addEventListener('click', function () {
                var current = document.body.classList.contains('dark-mode') ? 'dark' : 'light';
                var next = current === 'dark' ? 'light' : 'dark';
                localStorage.setItem('biblio-theme', next);
                applyTheme(next);
            });

            // Show language toast when language was changed
            try {
                var toastEl = document.getElementById('langToast');
                if (toastEl && toastEl.getAttribute('data-show') === '1') {
                    var t = new bootstrap.Toast(toastEl);
                    t.show();
                }
            } catch (e) { /* ignore */ }

            // Single hamburger behavior: on small screens show offcanvas, on larger screens toggle navbar collapse
             try {
                 var mainHamburger = document.getElementById('mainHamburger');
                 if (mainHamburger) {
                     mainHamburger.addEventListener('click', function () {
                         try {
                            // On small screens the button is visible; simply show the offcanvas sidebar
                            var ocEl = document.getElementById('offcanvasSidebar');
                            if (ocEl) {
                                var oc = bootstrap.Offcanvas.getInstance(ocEl) || new bootstrap.Offcanvas(ocEl);
                                oc.show();
                            }
                         } catch (e) { /* ignore */ }
                     });
                 }
             } catch (e) { /* ignore */ }
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Cookie consent banner (simple, localized) -->
    @if (!Context.Request.Cookies.ContainsKey("biblio_cookie_consent"))
    {
        <div id="cookieConsent" class="position-fixed bottom-0 start-0 end-0 mb-0 p-3" style="z-index:1050;">
            <div class="container">
                <div class="alert alert-dark d-flex align-items-center justify-content-between mb-0">
                    <div>
                        <strong>@Localizer["CookieNoticeTitle"]</strong>
                        <div class="small">@Localizer["CookieNoticeText"]</div>
                    </div>
                    <div class="text-end">
                        <button id="acceptCookies" class="btn btn-primary btn-sm me-2">@Localizer["AcceptCookies"]</button>
                        <a href="@Url.Action("Privacy","Home")" class="btn btn-link btn-sm">@Localizer["CookieSettings"]</a>
                    </div>
                </div>
            </div>
        </div>

        <script>
            (function(){
                try {
                    document.getElementById('acceptCookies').addEventListener('click', function(){
                        var expiry = new Date(); expiry.setFullYear(expiry.getFullYear()+1);
                        document.cookie = 'biblio_cookie_consent=1; path=/; expires=' + expiry.toUTCString() + ';';
                        var el = document.getElementById('cookieConsent'); if (el) el.remove();
                    });
                } catch(e) { /* ignore */ }
            })();
        </script>
    }
</body>
</html>
