@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Identity
@using Biblio_Models.Entiteiten
@inject Microsoft.Extensions.Localization.IStringLocalizer<Biblio_Web.SharedResource> L
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @L["SiteName"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblio_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@L["SiteName"]</a>

                <!-- Sidebar toggler for small screens -->
                <button class="btn btn-outline-primary d-lg-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="navbar-nav me-auto mb-2 mb-lg-0 list-unstyled d-flex">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@L["Home"]</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@L["Privacy"]</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">Admin</a>
                        }
                    </div>

                    <div class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center list-unstyled d-flex">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="nav-item d-flex align-items-center me-2">
                                @await Html.PartialAsync("_AdminDropdown")
                            </div>
                        }

                        <div class="nav-item me-2">
                            <button id="themeToggle" class="btn btn-outline-secondary btn-sm" aria-label="Toggle theme"><i id="themeIcon" class="bi bi-sun me-1"></i>@L["ToggleTheme"]</button>
                        </div>

                        <div class="nav-item dropdown me-2">
                            <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper() <i class="bi bi-caret-down-fill lang-caret"></i></a>
                            <div class="dropdown-menu" aria-labelledby="langDropdown">
                                <a class="dropdown-item"
                                   asp-controller="Culture"
                                   asp-action="SetLanguage"
                                   asp-route-culture="nl"
                                   asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">NL</a>
                                <a class="dropdown-item"
                                   asp-controller="Culture"
                                   asp-action="SetLanguage"
                                   asp-route-culture="en"
                                   asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">EN</a>
                            </div>
                        </div>

                        <!-- Profile link for authenticated users -->
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <div class="nav-item me-2">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">@L["Profile"]</a>
                            </div>
                        }

                        <div class="nav-item d-flex align-items-center">
                            @await Component.InvokeAsync("LoginStatus")
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Desktop sidebar (md+) -->
            <nav id="sidebar" class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="position-sticky pt-3 px-2">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-2 mb-2 text-muted">@L["Menu"]</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start d-flex align-items-center" asp-controller="Boeken" asp-action="Index"><i class="bi bi-book me-2"></i>@L["Books"]</a></li>
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start d-flex align-items-center" asp-controller="Leden" asp-action="Index"><i class="bi bi-people me-2"></i>@L["Members"]</a></li>
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start d-flex align-items-center" asp-controller="Uitlening" asp-action="Index"><i class="bi bi-journal-check me-2"></i>@L["Loans"]</a></li>
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start d-flex align-items-center" asp-controller="Categorieen" asp-action="Index"><i class="bi bi-tags me-2"></i>@L["Categories"]</a></li>
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start d-flex align-items-center" asp-controller="Talen" asp-action="Index"><i class="bi bi-translate me-2"></i>@L["Languages"]</a></li>
                        <li class="nav-item mb-3"><a class="btn btn-primary w-100 text-start d-flex align-items-center" asp-controller="Categorieen" asp-action="Index"><i class="bi bi-tags me-2"></i>@L["Categories"]</a></li>
                    </ul>

                    <h6 class="sidebar-heading px-2 mb-2 text-muted">@L["QuickActions"]</h6>
                    <div class="px-2">
                        @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
                        {
                            <a id="quickNewBook" class="btn btn-outline-secondary w-100 mb-2" asp-controller="Boeken" asp-action="Create">@L["NewBook"]</a>
                            <a id="quickNewMember" class="btn btn-outline-secondary w-100 mb-2" asp-controller="Leden" asp-action="Create">@L["NewMember"]</a>
                        }
                    </div>
                </div>
            </nav>

            <!-- Offcanvas sidebar for small screens -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasSidebarLabel">@L["Menu"]</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="mb-3">
                        <a class="btn btn-primary w-100 mb-2 text-start d-flex align-items-center" asp-controller="Boeken" asp-action="Index"><i class="bi bi-book me-2"></i>@L["Books"]</a>
                        <a class="btn btn-primary w-100 mb-2 text-start d-flex align-items-center" asp-controller="Leden" asp-action="Index"><i class="bi bi-people me-2"></i>@L["Members"]</a>
                        <a class="btn btn-primary w-100 mb-2 text-start d-flex align-items-center" asp-controller="Uitlening" asp-action="Index"><i class="bi bi-journal-check me-2"></i>@L["Loans"]</a>
                        <a class="btn btn-primary w-100 mb-2 text-start d-flex align-items-center" asp-controller="Categorieen" asp-action="Index"><i class="bi bi-tags me-2"></i>@L["Categories"]</a>
                        <a class="btn btn-primary w-100 mb-2 text-start d-flex align-items-center" asp-controller="Talen" asp-action="Index"><i class="bi bi-translate me-2"></i>@L["Languages"]</a>
                        <a class="btn btn-primary w-100 mb-2 text-start d-flex align-items-center" asp-controller="Categorieen" asp-action="Index"><i class="bi bi-tags me-2"></i>@L["Categories"]</a>
                    </div>
                    <h6 class="sidebar-heading px-2 mb-2 text-muted">@L["QuickActions"]</h6>
                    <div>
                        @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
                        {
                            <a id="offcanvasQuickNewBook" class="btn btn-outline-secondary w-100 mb-2" asp-controller="Boeken" asp-action="Create">@L["NewBook"]</a>
                            <a id="offcanvasQuickNewMember" class="btn btn-outline-secondary w-100 mb-2" asp-controller="Leden" asp-action="Create">@L["NewMember"]</a>
                        }
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <main class="col-md-10 ms-sm-auto px-4">
                <div class="py-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            <div class="text-center py-3">
                <span>&copy; @DateTime.Now.Year - @L["SiteName"]</span>
                <span class="mx-2">-</span>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">@L["Privacy"]</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            // Theme toggle
            var toggle = document.getElementById('themeToggle');
            function applyTheme(t) {
                if (t === 'dark') document.body.classList.add('dark-mode'); else document.body.classList.remove('dark-mode');
            }
            var saved = localStorage.getItem('biblio-theme') || 'light';
            applyTheme(saved);
            // update theme icon and footer status
            function updateThemeUi() {
                var isDark = document.body.classList.contains('dark-mode');
                var icon = document.getElementById('themeIcon');
                var status = document.getElementById('themeStatus');
                if (icon) icon.className = isDark ? 'bi bi-moon-fill me-1' : 'bi bi-sun-fill me-1';
                if (status) status.innerHTML = (isDark ? '<i class="bi bi-moon-fill"></i> Dark' : '<i class="bi bi-sun-fill"></i> Light');
            }
            updateThemeUi();
            if (toggle) toggle.addEventListener('click', function () {
                var current = document.body.classList.contains('dark-mode') ? 'dark' : 'light';
                var next = current === 'dark' ? 'light' : 'dark';
                localStorage.setItem('biblio-theme', next);
                applyTheme(next);
                updateThemeUi();
            });

            // No-op: anchors now navigate without JS. Keep for compatibility.
            var newBook = document.getElementById('quickNewBook') || document.getElementById('offcanvasQuickNewBook');
            var newMember = document.getElementById('quickNewMember') || document.getElementById('offcanvasQuickNewMember');
            if (newBook) newBook.addEventListener('click', function () { /* anchor will navigate */ });
            if (newMember) newMember.addEventListener('click', function () { /* anchor will navigate */ });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
