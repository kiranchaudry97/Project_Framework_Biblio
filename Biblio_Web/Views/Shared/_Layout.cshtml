@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Identity
@using Biblio_Models.Entiteiten
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblio_Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblio_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Biblio_Web</a>

                <!-- Sidebar toggler for small screens -->
                <button class="btn btn-outline-primary d-lg-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="#navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Boeken" asp-action="Index">@Localizer["Books"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Leden" asp-action="Index">@Localizer["Members"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Uitlening" asp-action="Index">@Localizer["Loans"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Categorieen" asp-action="Index">Categorieën</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">Admin</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item me-2">
                            <button id="themeToggle" class="btn btn-outline-secondary btn-sm">Toggle theme</button>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper()</a>
                            <ul class="dropdown-menu" aria-labelledby="langDropdown">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Culture"
                                       asp-action="SetLanguage"
                                       asp-route-culture="nl"
                                       asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
                                        NL
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Culture"
                                       asp-action="SetLanguage"
                                       asp-route-culture="en"
                                       asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
                                        EN
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            @await Component.InvokeAsync("LoginStatus")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Desktop sidebar (md+) -->
            <nav id="sidebar" class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="position-sticky pt-3 px-2">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-2 mb-2 text-muted">Menu</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start" asp-controller="Boeken" asp-action="Index">Boeken</a></li>
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start" asp-controller="Leden" asp-action="Index">Leden</a></li>
                        <li class="nav-item mb-1"><a class="btn btn-primary w-100 text-start" asp-controller="Uitlening" asp-action="Index">Uitleningen</a></li>
                        <li class="nav-item mb-3"><a class="btn btn-primary w-100 text-start" asp-controller="Categorieen" asp-action="Index">Categorieën</a></li>
                    </ul>

                    <h6 class="sidebar-heading px-2 mb-2 text-muted">Snelle acties</h6>
                    <div class="px-2">
                        @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
                        {
                            <a id="quickNewBook" class="btn btn-outline-secondary w-100 mb-2" asp-controller="Boeken" asp-action="Create">Nieuw boek</a>
                            <a id="quickNewMember" class="btn btn-outline-secondary w-100 mb-2" asp-controller="Leden" asp-action="Create">Nieuw lid</a>
                        }
                    </div>
                </div>
            </nav>

            <!-- Offcanvas sidebar for small screens -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasSidebarLabel">Menu</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="mb-3">
                        <a class="btn btn-primary w-100 mb-2 text-start" asp-controller="Boeken" asp-action="Index">Boeken</a>
                        <a class="btn btn-primary w-100 mb-2 text-start" asp-controller="Leden" asp-action="Index">Leden</a>
                        <a class="btn btn-primary w-100 mb-2 text-start" asp-controller="Uitlening" asp-action="Index">Uitleningen</a>
                        <a class="btn btn-primary w-100 mb-2 text-start" asp-controller="Categorieen" asp-action="Index">Categorieën</a>
                    </div>
                    <h6 class="sidebar-heading px-2 mb-2 text-muted">Snelle acties</h6>
                    <div>
                        @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
                        {
                            <a id="offcanvasQuickNewBook" class="btn btn-outline-secondary w-100 mb-2" asp-controller="Boeken" asp-action="Create">Nieuw boek</a>
                            <a id="offcanvasQuickNewMember" class="btn btn-outline-secondary w-100 mb-2" asp-controller="Leden" asp-action="Create">Nieuw lid</a>
                        }
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <main class="col-md-10 ms-sm-auto px-4">
                <div class="py-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center py-3">
                <span>&copy; 2025 - Biblio_Web</span>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="ms-2">@Localizer["Privacy"]</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            // Theme toggle
            var toggle = document.getElementById('themeToggle');
            function applyTheme(t) {
                if (t === 'dark') document.body.classList.add('dark-mode'); else document.body.classList.remove('dark-mode');
            }
            var saved = localStorage.getItem('biblio-theme') || 'light';
            applyTheme(saved);
            if (toggle) toggle.addEventListener('click', function () {
                var current = document.body.classList.contains('dark-mode') ? 'dark' : 'light';
                var next = current === 'dark' ? 'light' : 'dark';
                localStorage.setItem('biblio-theme', next);
                applyTheme(next);
            });

            // No-op: anchors now navigate without JS. Keep for compatibility.
            var newBook = document.getElementById('quickNewBook') || document.getElementById('offcanvasQuickNewBook');
            var newMember = document.getElementById('quickNewMember') || document.getElementById('offcanvasQuickNewMember');
            if (newBook) newBook.addEventListener('click', function () { /* anchor will navigate */ });
            if (newMember) newMember.addEventListener('click', function () { /* anchor will navigate */ });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
