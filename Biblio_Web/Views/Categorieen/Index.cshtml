@model IEnumerable<Biblio_Models.Entiteiten.Categorie>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Biblio_Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Categories"];
}

<h1>@Localizer["Categories"]</h1>

<!-- Category illustration -->
<div class="text-center mb-3">
    <img src="~/images/categorie-illustration.svg" alt="Categories illustration" class="img-fluid" style="max-width:120px; width:120px; height:auto; display:inline-block;" />
</div>

@if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
{
    <a class="btn btn-success mb-2" asp-action="Create">@Localizer["NewCategory"]</a>
}

<table class="table table-striped">
    <thead>
        <tr><th>@Localizer["ColumnName"]</th><th></th></tr>
    </thead>
    <tbody>
@foreach(var c in Model)
{
    <tr>
        <td>@c.Naam</td>
        <td>
            @if (User.IsInRole("Admin") || User.IsInRole("Medewerker"))
            {
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@c.Id">@Localizer["Delete"]</a>
            }
        </td>
    </tr>
}
    </tbody>
</table>