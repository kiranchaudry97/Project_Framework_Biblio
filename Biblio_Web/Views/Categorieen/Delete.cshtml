@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Biblio_Models.Entiteiten.Categorie
@{
    ViewData["Title"] = Localizer["DeleteCategory"];
}

<h1>@Localizer["DeleteCategory"]</h1>

<div class="alert alert-warning">@Localizer["DeleteConfirm"]</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">@Localizer["ColumnName"]</label>
        <div>@Model.Naam</div>
    </div>
    <button class="btn btn-danger">@Localizer["Delete"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>