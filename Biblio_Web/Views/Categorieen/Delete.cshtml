@model Biblio_Models.Entiteiten.Categorie
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Delete"]; 
}

<h1>@Localizer["Delete"]</h1>

<div class="alert alert-warning">@Localizer["DeleteConfirm"]</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">@Localizer["Name"]</label>
        <div>@Model.Naam</div>
    </div>
    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>