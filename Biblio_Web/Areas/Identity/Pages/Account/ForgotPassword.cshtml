@page
@model Biblio_Web.Areas.Identity.Pages.Account.ForgotPasswordModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ForgotPasswordTitle"];
}

<link rel="stylesheet" href="~/css/forgotpassword.css" />

<div class="container forgot-password">
    <div class="row w-100 justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card-forgot position-relative">
                <!-- language selector in top-right corner of the card -->
                <div class="lang-dropdown position-absolute top-0 end-0 p-3">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="langDropdownForgot" data-bs-toggle="dropdown" aria-expanded="false">@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper()</button>
                        <ul class="dropdown-menu" aria-labelledby="langDropdownForgot">
                            <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetLanguage" asp-route-culture="nl" asp-route-returnUrl="@(Request.Path + Request.QueryString)">NL</a></li>
                            <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetLanguage" asp-route-culture="en" asp-route-returnUrl="@(Request.Path + Request.QueryString)">EN</a></li>
                        </ul>
                    </div>
                </div>

                <div class="form-centered text-center">
                    <a class="navbar-brand fw-bold fs-4 mb-3" asp-area="" asp-controller="Home" asp-action="Index">Biblio</a>

                    <h1 class="h2 mb-2">@Localizer["ForgotPasswordTitle"]</h1>
                    <p class="h5 mb-4 lead-text">@Localizer["ForgotPasswordSubtitle"]</p>

                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert alert-info">@Model.StatusMessage</div>
                    }

                    <form method="post" class="needs-validation" novalidate>
                        <partial name="_ValidationScriptsPartial" />
                        <div asp-validation-summary="All" class="text-danger mb-2"></div>

                        <div class="mb-3 text-start">
                            <label class="form-label">@Localizer["Email"]</label>
                            <input asp-for="Input.Email" class="form-control form-control-sm" placeholder="@Localizer["EmailPlaceholder"]" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-sm w-100 mb-2">@Localizer["ResetButton"]</button>

                        <div class="text-center small mt-2 small-links">
                            <a asp-page="./Login" class="mx-2">@Localizer["Login Link"]</a>
                            <a asp-page="./Register" class="mx-2">@Localizer["Register Link"]</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
